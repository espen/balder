<h1>Login</h1>
 
<%= form_for @user_session, :url => authenticate_path do |f| %>
  <%= f.error_messages %>
  <%= f.label :email %><br />
  <%= f.text_field :email %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br />
  <%= f.submit "Login" %>

  <%= link_to "Sign in with Facebook", "/auth/facebook" unless ENV['FACEBOOK_ID'].nil? %>
<% end %>